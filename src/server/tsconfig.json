{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["../src/*"],
      "@/*": ["../src/*"]
    }
  },
  "include": ["./**/*", "../utils/**/*"],
  "exclude": ["node_modules", "dist"]
}